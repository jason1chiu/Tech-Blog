<article>
  <a href="/dashboard"> &larr; Back To Dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <input name="post-title" type="text" size="60" value="{{post.title}}" />
    </div>
    <div>
      <textarea name="post-body" rows="10" cols="60">{{post.body}}</textarea>
    </div>
    <div>
      <button type="submit">Save Changes</button>
      <button type="button" class="delete-post-btn">Delete Post</button>
    </div>
  </form>
</article>

<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">Add Comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="../assets/js/editPost.js"></script>
<script src="../assets/js/deletePost.js"></script>
<script src="../assets/js/comment.js"></script>