<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h1 class="text-center">Welcome to your Dashboard</h1>

      {{#if posts.length}}
        <ul class="list-group mt-5">
          {{#each posts}}
            <li class="list-group-item"><a href="/post/{{id}}">{{title}}</a></li>
          {{/each}}
        </ul>
      {{else}}
        <p class="mt-5">No posts yet.</p>
      {{/if}}
    </div>
  </div>
</div>