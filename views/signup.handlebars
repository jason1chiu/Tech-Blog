<form class="signup">
    <div class="form-group mb-3">
        <label for="username-signup" class="form-label" style="font-size: 1.2rem;">Username:</label>
        <input type="text" class="form-control form-control-lg" id="username-signup" />
    </div>
    <div class="form-group mb-3">
        <label for="email-signup" class="form-label" style="font-size: 1.2rem;">Email:</label>
        <input type="text" class="form-control form-control-lg" id="email-signup" />
    </div>
    <div class="form-group mb-3">
        <label for="password-signup" class="form-label" style="font-size: 1.2rem;">Password:</label>
        <input type="password" class="form-control form-control-lg" id="password-signup" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-lg">Signup</button>
    </div>
</form>

<script src="../js/signup.js"></script>