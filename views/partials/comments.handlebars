<div class="comments">
  {{#each this}}
  <section class="comment mb-3 pb-3 border-bottom">
    <div class="meta d-flex align-items-center mb-2 justify-content-between">
      <div>
        <i class="bi bi-person-circle me-2"></i> 
        <span>{{user.username}} on {{format_date created_at}}</span>
      </div>
      {{#if user}}
      <div class="d-flex align-items-center">
        <button class="btn btn-danger delete-comment-btn" data-comment-id="{{id}}"><i class="bi bi-trash"></i>Delete Comment</button>
      </div>
      {{else}}
      <div class="d-flex align-items-center">
        <button class="btn btn-danger delete-comment-btn" data-comment-id="{{id}}" data-bs-toggle="modal" data-bs-target="#loginModal"><i class="bi bi-trash"></i>Delete Comment</button>
      </div>
      {{/if}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>

<!-- Login Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="loginModalLabel">Error</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        You must be the same user who created this comment to perform this action. 
      </div>
      <div class="modal-footer">
        <a href="/login" class="btn btn-primary">Login</a>
        <a href="/signup" class="btn btn-secondary">Sign up</a>
      </div>
    </div>
  </div>
</div>

<script src="../../js/deleteComment.js"></script>